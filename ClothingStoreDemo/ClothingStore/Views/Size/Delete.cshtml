@model ClothingStore.Models.Size

@{
    ViewData["Title"] = "Eliminar Talla";
}

<h1>Eliminar Talla</h1>

<h3>¿Estas seguro que quieres eliminar esta Talla?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2 mt-3">
            Id Talla
        </dt>
        <dd class = "col-sm-10 mt-3">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2 mt-3">
            Talla
        </dt>
        <dd class = "col-sm-10 mt-3">
            @Html.DisplayFor(model => model.SizeDescription)
        </dd>
    </dl>
    
    <form asp-action="Delete" class="mt-3">
        <hr />
        <button type="submit" class="btn btn-danger">Eliminar <i class="bi bi-trash3-fill"></i></button>
        <a asp-action="Index" class="btn btn-primary">Regresar <i class="bi bi-file-earmark-text-fill"></i></a>
    </form>
</div>
