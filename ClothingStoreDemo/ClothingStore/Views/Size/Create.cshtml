@model ClothingStore.Models.Size

@{
    ViewData["Title"] = "Agregar Talla";
}

<h1>Agregar Talla</h1>

<hr />
<div class="row mt-3">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mt-3">
                <label asp-for="SizeDescription" class="control-label"></label>
                <input asp-for="SizeDescription" class="form-control" />
                <span asp-validation-for="SizeDescription" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <hr />
                <button type="submit" class="btn btn-success">Guardar <i class="bi bi-floppy-fill"></i></button>
                <a asp-action="Index" class="btn btn-primary">Regresar <i class="bi bi-file-earmark-text-fill"></i></a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
