@model ClothingStore.Models.Employee

@{
    ViewData["Title"] = "Eliminar Empleado";
}

<h1>Eliminar Producto</h1>

<h3>¿Estas seguro que quieres eliminar este producto?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Id Empleado
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            Nombres
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EmployeeFirstName)
        </dd>
        <dt class = "col-sm-2">
            Apellidos
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EmployeeLastName)
        </dd>
        <dt class = "col-sm-2">
            Correo Electronico
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            Telefono
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class = "col-sm-2">
            Direccion
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class = "col-sm-2">
            Salario
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Salary)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <hr />
        <hr />
        <button type="submit" class="btn btn-danger">Eliminar <i class="bi bi-trash3-fill"></i></button>
        <a asp-action="Index" class="btn btn-primary">Regresar <i class="bi bi-file-earmark-text-fill"></i></a>
    </form>
</div>
