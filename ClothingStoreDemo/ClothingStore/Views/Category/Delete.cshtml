@model ClothingStore.Models.Category

@{
    ViewData["Title"] = "Eliminar Categoria";
}

<h1>Eliminar Categoria</h1>

<h3>¿Estas seguro que quieres eliminar esta Categoria?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Id Categoria
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            Categoria
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CategoryName)
        </dd>
    </dl>

    <form asp-action="Delete">
        <hr />
        <button type="submit" class="btn btn-danger">Eliminar <i class="bi bi-trash3-fill"></i></button>
        <a asp-action="Index" class="btn btn-primary">Regresar <i class="bi bi-file-earmark-text-fill"></i></a>
    </form>
</div>
